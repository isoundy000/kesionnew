/*开关*/
.ks-switch{width:46px;height:28px; background:#d5dade;border-radius:50px; position:relative; cursor:pointer; -webkit-transition:0.3s; transition:0.3s; float:left;}
.ks-switch:before{content:'';width:24px;height:24px; background:#fff;border-radius:50%; box-shadow: 0 0 6px rgba(0,0,0,0.2); position:absolute;top:2px;right:20px; -webkit-transition:0.3s; transition:0.3s;}
.ks-switch--on{ background:#44d58e;}
.ks-switch--on:before{right:2px;}
